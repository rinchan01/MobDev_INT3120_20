<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2">


    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="50dp"
        android:fontFamily="@font/mon_italic"
        android:text=""
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/gameName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/mon_bold_italic"
        android:text="Plane Game!"
        android:textColor="@color/white"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="@+id/welcome"
        app:layout_constraintTop_toBottomOf="@+id/welcome" />

    <Button
        android:id="@+id/startGameButton"
        android:layout_width="296dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="Start"
        app:layout_constraintStart_toStartOf="@+id/gameName"
        app:layout_constraintTop_toBottomOf="@+id/gameName" />
    <Button
        android:id="@+id/shopButton"
        android:layout_width="296dp"
        android:layout_height="60dp"
        android:text="Shop"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/startGameButton"
        app:layout_constraintEnd_toEndOf="@+id/startGameButton"
        app:layout_constraintStart_toStartOf="@+id/startGameButton" />
    <Button
        android:id="@+id/leaderboardButton"
        android:layout_width="296dp"
        android:layout_height="60dp"
        android:text="Leaderboard"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/shopButton"
        app:layout_constraintEnd_toEndOf="@+id/shopButton"
        app:layout_constraintStart_toStartOf="@+id/shopButton" />

    <Button
        android:id="@+id/settingButton"
        android:layout_width="296dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="Settings"
        app:layout_constraintTop_toBottomOf="@+id/leaderboardButton"
        app:layout_constraintEnd_toEndOf="@+id/leaderboardButton"
        app:layout_constraintStart_toStartOf="@+id/leaderboardButton" />
    <Button
        android:id="@+id/helpButton"
        android:layout_width="296dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="Help"
        app:layout_constraintTop_toBottomOf="@+id/settingButton"
        app:layout_constraintEnd_toEndOf="@+id/settingButton"
        app:layout_constraintStart_toStartOf="@+id/settingButton" />
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="296dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="Logout"
        app:layout_constraintTop_toBottomOf="@+id/helpButton"
        app:layout_constraintEnd_toEndOf="@+id/helpButton"
        app:layout_constraintStart_toStartOf="@+id/helpButton" />
</androidx.constraintlayout.widget.ConstraintLayout>