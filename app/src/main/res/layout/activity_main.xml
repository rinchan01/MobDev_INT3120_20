<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="252dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/mon_italic"
        android:text=""
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.389"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gameName"
        android:layout_width="266dp"
        android:layout_height="122dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/mon_bold_italic"
        android:text="Plane Game!"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="@+id/welcome"
        app:layout_constraintTop_toBottomOf="@+id/welcome" />

    <Button
        android:id="@+id/startGameButton"
        android:layout_width="294dp"
        android:layout_height="77dp"
        android:layout_marginTop="36dp"
        android:text="Start"
        app:layout_constraintEnd_toEndOf="@+id/gameName"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@+id/gameName"
        app:layout_constraintTop_toBottomOf="@+id/gameName" />

    <Button
        android:id="@+id/shopButton"
        android:layout_width="294dp"
        android:layout_height="77dp"
        android:text="Shop"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/startGameButton"
        app:layout_constraintEnd_toEndOf="@+id/startGameButton"
        app:layout_constraintStart_toStartOf="@+id/startGameButton" />
    <Button
        android:id="@+id/leaderboardButton"
        android:layout_width="294dp"
        android:layout_height="77dp"
        android:text="Leaderboard"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/shopButton"
        app:layout_constraintEnd_toEndOf="@+id/shopButton"
        app:layout_constraintStart_toStartOf="@+id/shopButton" />

    <Button
        android:id="@+id/settingButton"
        android:layout_width="294dp"
        android:layout_height="77dp"
        android:layout_marginTop="10dp"
        android:text="Settings"
        app:layout_constraintTop_toBottomOf="@+id/leaderboardButton"
        app:layout_constraintEnd_toEndOf="@+id/leaderboardButton"
        app:layout_constraintStart_toStartOf="@+id/leaderboardButton" />
    <Button
        android:id="@+id/helpButton"
        android:layout_width="294dp"
        android:layout_height="77dp"
        android:layout_marginTop="10dp"
        android:text="Help"
        app:layout_constraintTop_toBottomOf="@+id/settingButton"
        app:layout_constraintEnd_toEndOf="@+id/settingButton"
        app:layout_constraintStart_toStartOf="@+id/settingButton" />
</androidx.constraintlayout.widget.ConstraintLayout>